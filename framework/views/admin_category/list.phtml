			<td>
				<a class="btn btn-default btn-xs" href="/<?php echo $this->config->lang ?>/admin/category/edit/<?php echo $cat['id'] ?>"><?php echo $t->_('edit') ?></a>
				<a class="btn btn-default btn-xs btn-danger" href="/<?php echo $this->config->lang ?>/admin/category/delete/<?php echo $cat['id'] ?>" onclick="return confirm('<?php echo $t->_('confirm_cat_delete', [
