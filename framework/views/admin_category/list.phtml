<?php if ($maxPages > 1): ?>
<nav>
	<ul class="pagination">
		<?php if ($currentPage > 1): ?>
		<li>
			<a href="/<?php echo $this->config->lang ?>/admin/category/list/<?php echo $currentPage - 1 ?>" aria-label="<?php echo $t->_('back') ?>">
				<span aria-hidden="true">&laquo;</span>
			</a>
		</li>
		<?php endif ?>
		<?php foreach($pages as $pageNumber): ?>
			<li<?php if ($currentPage == $pageNumber): ?> class="active"<?php endif ?>>
				<?php if ($currentPage == $pageNumber): ?>
					<span><?php echo $pageNumber; ?></span>
				<?php else: ?>
					<a href="/<?php echo $this->config->lang ?>/admin/category/list/<?php echo $pageNumber ?>"><?php echo $pageNumber ?></a>
				<?php endif ?>

			</li>
		<?php endforeach ?>
		<?php if ($currentPage < $maxPages): ?>
		<li>
			<a href="/<?php echo $this->config->lang ?>/admin/category/list/<?php echo $currentPage + 1 ?>" aria-label="<?php echo $t->_('forward') ?>">
				<span aria-hidden="true">&raquo;</span>
			</a>
		</li>
		<?php endif ?>
	</ul>
</nav>
<?php endif ?>
