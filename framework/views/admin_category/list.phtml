<div class="page-header">
	<h3><?php echo $t->_('cat_list') ?></h3>
</div>

<ol class="breadcrumb">
	<li><a href="/<?php echo $this->config->lang ?>/admin"><?php echo $t->_('home') ?></a></li>
	<li class="active"><?php echo $t->_('cats') ?></li>
</ol>

