	</thead>
	<tbody>

		<?php foreach ($cats as $cat) { ?>
		<tr>
			<td><?php echo $cat['id'] ?></td>
			<td><?php echo $cat['name'] ?></td>
			<td><?php echo $cat['slug'] ?></td>
